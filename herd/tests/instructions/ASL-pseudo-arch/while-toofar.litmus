func T0(x::bits(32))
begin
  var s: integer = 0;
  var i = UInt(read_memory(x, 32));
  let j = i;
  while i > 0 do
    s = s + i;
    i = i-1;
  end;
end;

func T1(x::bits(32))
begin
  for k = 1 to 3 do
    write_memory(x,32,k[2:0]);
  end;
end;

func main() => integer
begin
  let x = read_register(1);

  T0(x);
  T1(x);

  return 0;
end;

